<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
		</Console>
		<!-- http://logging.apache.org/log4j/2.x/manual/appenders.html#RollingFileAppender -->
		<!-- will create up to 7 archives on the same day (1-7) that are stored 
			in a directory based on the current year and month -->
		<!-- 24Hour: new file -->
		<!-- 250MB: new file -->
		<RollingFile name="RollingFile" fileName="c:/logger/app.log"
			filePattern="c:/logger/$${date:yyyy-MM}/logger-%d{yyyy-MM-dd-HH}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<!-- 24시간 마다 압축 -->
				<!-- 250MB 초가시 압축 -->
				<TimeBasedTriggeringPolicy interval="24"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="java.sql" level="INFO" additivity="false">

			<!-- 시스템 출력 +파일출력으로 변경 -->
			<AppenderRef ref="console" />
			<AppenderRef ref="RollingFile" />

		</Logger>
		<Logger name="egovframework" level="DEBUG" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="RollingFile" />
		</Logger>
		<!-- log SQL with timing information, post execution -->
		<Logger name="jdbc.sqltiming" level="INFO" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="RollingFile" />
		</Logger>
		<Logger name="org.springframework" level="INFO" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="RollingFile" />
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="console" />
			<AppenderRef ref="RollingFile" />

		</Root>
	</Loggers>
</Configuration>
